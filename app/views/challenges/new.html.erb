<h1>New Challenge</h1>

<%= form_for @challenge, :url =>'/admin/challenges/create' do |f| %>
<%= f.label :title %><br />
<%= f.text_field :title %><br /><br />
<%= f.label :description %><br />
<%= f.text_area :description %><br /><br />
<%= f.label :value, "Point Value (integer)" %><br />
<%= f.text_field :value %><br /><br />
<%= f.label :level_name, "Difficulty Level" %><br />
<%= f.text_field :level_name %><br /><br />
<%=f.submit "Create Challenge" %>
<% end %> 